<!-- res/values/styles.xml -->
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="buttonStyle">@style/Widget.MaterialComponents.Button</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Primary button style -->
    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/purple_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <!-- Secondary button style -->
    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/teal_200</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/teal_700</item>
        <item name="rippleColor">@color/teal_200</item>
    </style>
</resources>
