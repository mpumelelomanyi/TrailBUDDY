<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".TrailDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/trail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trail Name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/trail_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trail Description"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/trail_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trail Length"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/trail_difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trail Difficulty"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/book_trail_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book This Trail"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>
