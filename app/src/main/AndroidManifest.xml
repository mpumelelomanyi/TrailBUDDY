<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.trailbuddyapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TrailBuddyApp">

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity android:name=".LoginActivity" android:exported="false"/>

        <!-- Registration Activity -->
        <activity android:name=".RegistrationActivity" android:exported="false"/>

        <!-- Dashboard Activity -->
        <activity android:name=".DashboardActivity" android:exported="false"/>

        <!-- Profile Activity -->
        <activity android:name=".ProfileActivity" android:exported="false"/>

        <!-- Edit Profile Activity -->
        <activity android:name=".EditProfileActivity" android:exported="false"/>

        <!-- Create Event Activity -->
        <activity android:name=".CreateEventActivity" android:exported="false"/>

        <!-- Trail List Activity -->
        <activity android:name=".TrailListActivity" android:exported="false"/>

        <!-- Trail Detail Activity -->
        <activity android:name=".TrailDetailActivity" android:exported="false"/>

    </application>

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

</manifest>
